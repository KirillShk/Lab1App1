        <Button Content="=" HorizontalAlignment="Left" Margin="150,280,0,0" VerticalAlignment="Top" Width="60" Height="59" Background="#FFAF6407" FontSize="24" FontFamily="SimSun"/>
        <Button Content="/" HorizontalAlignment="Left" Margin="220,280,0,0" VerticalAlignment="Top" Width="60" Height="59" Background="#FFAF6407" FontSize="24" FontFamily="SimSun"/>





    </Grid>
